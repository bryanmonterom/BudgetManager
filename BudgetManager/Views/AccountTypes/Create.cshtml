@model AccountType
@{
    ViewData["Title"] = "Create Account Type";
}

<h1>Create Account Type</h1>
<h5>
    The account type refers to how we can group the accouts.
    Examples: Loans, credit cards, etc..
</h5>

<div asp-validation-summary="ModelOnly " class="text-danger"></div>

<form asp-controller="AccountTypes" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" asp-action="Index">Cancel</a>

</form>

@section Scripts{
<partial name-"_ValidationScriptsPartial />
}